<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Coffee</title>
  </head>
  <body>
    <form action="/coffee/create" method="POST">
      <div>
        <label for="name">Name</label>
        <input type="text" id="name" name="name" />
      </div>
      <div>
        <label for="description">Description</label>
        <input type="text" id="description" name="description" />
      </div>
      <div>
        <label for="roastLevel">Roast Level</label>
        <input type="number" id="roastLevel" name="roastLevel" />
      </div>
      <div>
        <label for="flavorProfile">Flavor Profile</label>
        <input type="number" id="flavorProfile" name="flavorProfile" />
      </div>
      <div>
        <label for="price">Price</label>
        <input type="number" id="price" name="price" />
      </div>
      <div>
        <label for="quantity">Quantity</label>
        <input type="number" id="quantity" name="quantity" />
      </div>
    </form>
  </body>
</html>
