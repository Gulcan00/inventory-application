<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Coffee</title>
  </head>
  <body>
    <form action="/coffee/create" method="POST">
      <div>
        <label for="name">Name</label>
        <input type="text" id="name" name="name" required />
        <% if (locals.errors && errors.find(err => err.path == 'name')) { %>
        <p><%= errors.find(err => err.path == 'name').msg %></p>
        <% } %>
      </div>
      <div>
        <label for="description">Description</label>
        <input type="text" id="description" name="description" />
      </div>
      <div>
        <label for="roastLevel">Roast Level</label>
        <select name="roastLevel" id="roastLevel" required>
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
        </select>
      </div>
      <div>
        <label for="region">Region</label>
        <select name="regionId" id="region" required>
          <% for( let region of regions) { %>
          <option value="<%= region.id %>"><%= region.name %></option>
          <% } %>
        </select>
      </div>
      <div>
        <label for="flavorProfile">Flavor Profile</label>
        <select name="flavorProfileIds" id="flavorProfile" multiple>
          <% for( let flavorProfile of flavorProfiles) { %>
          <option value="<%= flavorProfile.id %>">
            <%= flavorProfile.name %>
          </option>
          <% } %>
        </select>
      </div>
      <div>
        <label for="price">Price</label>
        <input type="number" id="price" name="price" step="0.01" required />
      </div>
      <div>
        <label for="quantity">Quantity</label>
        <input type="number" id="quantity" name="quantity" required />
      </div>
      <button type="submit">Submit</button>
      <button type="button">Cancel</button>
    </form>
  </body>
</html>
